FROM python:3.11-slim

WORKDIR /app

COPY ./containerization/dashboard_requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

COPY ULTIMATE_DASHBOARD_AI_ENHANCED_8751.py /app/

EXPOSE 8751

CMD ["gunicorn", "--workers", "4", "--bind", "0.0.0.0:8751", "ULTIMATE_DASHBOARD_AI_ENHANCED_8751:main()"]
